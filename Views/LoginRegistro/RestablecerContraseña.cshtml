@model Login_Y_Registro.Models.ViewModels.RestablecerContraseñaViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = "_LoginLayout";
}

<h2>Restablecer Contraseña</h2>

<form asp-action="RestablecerContraseña" method="post">
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label for="NuevaContraseña">Nueva Contraseña</label>
        <input asp-for="NuevaContraseña" class="form-control" type="password" id="nuevaContraseña" />
        <span asp-validation-for="NuevaContraseña" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ConfirmarContraseña">Confirmar Contraseña</label>
        <input asp-for="ConfirmarContraseña" class="form-control" type="password" id="confirmarContraseña" />
        <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Nueva Contraseña</button>
</form>

