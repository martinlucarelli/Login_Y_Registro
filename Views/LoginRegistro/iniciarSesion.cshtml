
@model Login_Y_Registro.Models.ViewModels.UsuarioViewModel

@{
   ViewData["Title"] = "Iniciar sesión";
    Layout = "_LoginLayout";
}




    <div class="form-container">
        <h2>Iniciar sesión</h2>
    
    <form asp-action="iniciarSesion" asp-controller="LoginRegistro" method="post">
            <div class="input-group">
                <label for="email">Correo electrónico</label>
                <input asp-for="correo" type="email" id="email" placeholder="Introduce tu correo" required>
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="input-group">
                <label for="password">Contraseña</label>
                <input asp-for="contraseña" type="password" id="password" placeholder="Introduce tu contraseña" required>
            </div>
            <button type="submit" class="btn-submit">Iniciar sesión</button>
            <div>

            <p>¿No tienes cuenta?</p> <a asp-action="registrarUsuario" asp-controller="LoginRegistro">Registrate</a>

            </div>
        </form>
    </div>
 
   


