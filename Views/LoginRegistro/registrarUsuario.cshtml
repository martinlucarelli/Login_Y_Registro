@model Login_Y_Registro.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "registrarUsuario";
    Layout = "_LoginLayout";
}

<div class="form-container">
    <h2>Registrarse</h2>

    <form asp-action="registrarUsuario" asp-controller="LoginRegistro" method="post">
        <div class="input-group">
            <label for="email">Correo electrónico</label>
            <input asp-for="correo" type="email" id="email" placeholder="Introduce tu correo" required>
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>
        <div class="input-group">
            <label for="password">Contraseña</label>
            <input asp-for="contraseña" type="password" id="password" placeholder="Introduce tu contraseña" required>
            <span asp-validation-for="contraseña" class="text-danger"></span>
        </div>
        <div class="input-group">
            <label for="password">Repetir contraseña</label>
            <input asp-for="confirmarContraseña" type="password" id="password" placeholder="Repita su contraseña" required>
            <span asp-validation-for="confirmarContraseña" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-submit">Registrarse</button>
    </form>
</div>

