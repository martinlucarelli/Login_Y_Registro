@model Login_Y_Registro.Models.ViewModels.RestablecerContraseñaViewModel
@{
    ViewData["Title"] = "RecuperarContraseña";
    Layout = "_LoginLayout";
}

<h2>Restablecer Contraseña</h2>


<form asp-action="RecuperarContraseña" method="post">
    <div class="form-group">
        <label for="Correo">Correo Electrónico</label>
        <input asp-for="Correo" class="form-control" id="Correo" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar enlace para restablecer contraseña</button>
</form>

